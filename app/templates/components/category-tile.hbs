<div class="category-tile">
  <div class="well">
    {{#link-to 'category' category.id}}{{category.name}}{{/link-to}}
    <div class="hover-show-listing">
      <ul>
        {{#each category.listings as |listing|}}
          <li>{{listing.title}}</li>
        {{/each}}
      </ul>
    </div>
  </div>

</div>
{{yield}}
