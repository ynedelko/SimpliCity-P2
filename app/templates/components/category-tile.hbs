<div class="category-tile">
  <div class="well">

    <div class="text-center tile-title">{{#link-to 'category' category.id}}{{category.name}}{{/link-to}}</div>
    <hr>

    <div class="hover-show-listing">
      <ul>
        {{#each category.listings as |listing|}}
          <li>{{listing.title}}</li>
        {{/each}}
      </ul>
    </div>
  </div>

</div>
{{yield}}
